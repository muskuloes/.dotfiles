{
  "suggest.autoTrigger": "always",
  "diagnostic.errorSign": "âœ—",
  "python.formatting.provider": "yapf",
  "yaml.format.enable": true,
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },
  "python.pythonPath": "~/.local/bin/py",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": [
        "vim"
      ]
    }
  }
}
