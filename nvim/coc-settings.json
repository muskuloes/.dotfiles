{
  "suggest.autoTrigger": "always",
  "diagnostic.errorSign": "âœ—",
  "python.formatting.provider": "yapf",
  "yaml.format.enable": true,
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },
  "python.pythonPath": "~/.local/bin/py",
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "json",
    "javascript",
    "typescript",
    "rust",
    "elixir"
  ],
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": [
        "vim"
      ]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": [
        "lua"
      ]
    }
  }
}
