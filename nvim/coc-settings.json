{
  "suggest.autoTrigger": "always",
  "diagnostic.errorSign": "âœ—",
  "python.formatting.provider": "black",
  "yaml.format.enable": true,
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "json",
    "javascript",
    "typescript",
    "rust",
    "elixir"
  ],
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  }
}
